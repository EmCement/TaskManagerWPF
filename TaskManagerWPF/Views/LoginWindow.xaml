<Window x:Class="TaskManagerWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход - Менеджер задач" 
        Height="400" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#f5f7fa">
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Width="300">

            <TextBlock Text="🔐 МЕНЕДЖЕР ЗАДАЧ" 
                      FontSize="24" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,30"
                      Foreground="#2c3e50"/>

            <TextBlock Text="Имя пользователя" 
                      Foreground="#34495e"
                      Margin="0,10,0,5"/>

            <TextBox x:Name="UsernameTextBox"
                    Height="35"
                    FontSize="14"
                    Padding="5"/>

            <TextBlock Text="Пароль" 
                      Foreground="#34495e"
                      Margin="0,15,0,5"/>

            <PasswordBox x:Name="PasswordBox"
                        Height="35"
                        FontSize="14"
                        Padding="5"/>

            <CheckBox x:Name="RememberCheckBox"
                     Content="Запомнить меня"
                     Margin="0,15,0,0"
                     Foreground="#34495e"/>

            <Button x:Name="LoginButton"
                   Content="Войти"
                   Background="#3498db"
                   Foreground="White"
                   Height="40"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,25,0,10"
                   Click="LoginButton_Click"/>
            <TextBlock Text="Нет аккаунта?" 
                    Foreground="#7f8c8d"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,0"/>

            <Button Content="Зарегистрироваться"
                    Background="Transparent"
                    Foreground="#3498db"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,15"
                    Click="Register_Click"/>

        </StackPanel>
    </Grid>
</Window>