<Window x:Class="TaskManagerWPF.Views.TaskDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новая задача" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleText"
                  Text="Новая задача" 
                  FontSize="20" 
                  FontWeight="Bold"
                  Grid.Row="0"
                  Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Название задачи:" Margin="0,0,0,5"/>
                <TextBox x:Name="TitleTextBox" 
                        Height="30"
                        Margin="0,0,0,15"/>

                <TextBlock Text="Описание:" Margin="0,0,0,5"/>
                <TextBox x:Name="DescriptionTextBox" 
                        Height="80" 
                        Margin="0,0,0,15"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"/>

                <TextBlock Text="Проект:" Margin="0,0,0,5"/>
                <ComboBox x:Name="ProjectComboBox" 
                         Height="30"
                         Margin="0,0,0,15">
                    <ComboBoxItem Content="Редизайн сайта"/>
                    <ComboBoxItem Content="Мобильное приложение"/>
                    <ComboBoxItem Content="API проект"/>
                    <ComboBoxItem Content="Интернет-магазин"/>
                </ComboBox>

                <TextBlock Text="Приоритет:" Margin="0,0,0,5"/>
                <ComboBox x:Name="PriorityComboBox" 
                         Height="30"
                         Margin="0,0,0,15">
                    <ComboBoxItem Content="Низкий"/>
                    <ComboBoxItem Content="Средний"/>
                    <ComboBoxItem Content="Высокий"/>
                </ComboBox>

                <TextBlock Text="Статус:" Margin="0,0,0,5"/>
                <ComboBox x:Name="StatusComboBox" 
                         Height="30"
                         Margin="0,0,0,15">
                    <ComboBoxItem Content="Новая"/>
                    <ComboBoxItem Content="В работе"/>
                    <ComboBoxItem Content="Завершена"/>
                </ComboBox>

                <TextBlock Text="Срок выполнения:" Margin="0,0,0,5"/>
                <DatePicker x:Name="DueDatePicker" 
                           Height="30"
                           Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal"
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Отмена" 
                   Width="100"
                   Height="35"
                   Margin="0,0,10,0"
                   Click="Cancel_Click"/>
            <Button x:Name="SaveButton"
                   Content="Сохранить" 
                   Background="#2ecc71"
                   Foreground="White"
                   Width="100"
                   Height="35"
                   Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>