<Window x:Class="TaskManagerWPF.Views.ProjectsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проекты - Менеджер задач"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#ecf0f1">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Проекты" 
                      FontSize="28" 
                      FontWeight="Bold"
                      Foreground="#2c3e50"
                      VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="🔄 Обновить"
                       Background="#95a5a6"
                       Foreground="White"
                       Width="100"
                       Height="35"
                       Margin="5"
                       Click="Refresh_Click"/>
                <Button Content="➕ Новый проект"
                       Background="#3498db"
                       Foreground="White"
                       Width="120"
                       Height="35"
                       Margin="5"
                       Click="NewProject_Click"/>
            </StackPanel>
        </Grid>

        <!-- Список проектов (DataGrid) -->
        <Border Grid.Row="1" 
               Background="White"
               CornerRadius="8">
            <DataGrid x:Name="ProjectsGrid"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     IsReadOnly="True"
                     SelectionMode="Single"
                     MouseDoubleClick="ProjectsGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="50" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="Название" Width="200" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Описание" Width="250" Binding="{Binding Description}"/>
                    <DataGridTextColumn Header="Создатель" Width="120" Binding="{Binding CreatedById}"/>
                    <DataGridTextColumn Header="Создан" Width="120" 
                                       Binding="{Binding CreatedAt, StringFormat='dd.MM.yyyy'}"/>
                    <DataGridTextColumn Header="Обновлен" Width="120" 
                                       Binding="{Binding UpdatedAt, StringFormat='dd.MM.yyyy'}"/>
                    <DataGridTemplateColumn Header="Действия" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="✏️" 
                                           Width="30"
                                           Height="25"
                                           Margin="2"
                                           Tag="{Binding Id}"
                                           Click="EditProject_Click"/>
                                    <Button Content="🗑️" 
                                           Width="30"
                                           Height="25"
                                           Margin="2"
                                           Background="Red"
                                           Foreground="White"
                                           Tag="{Binding Id}"
                                           Click="DeleteProject_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>