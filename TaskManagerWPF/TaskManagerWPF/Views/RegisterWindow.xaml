<Window x:Class="TaskManagerWPF.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация - Менеджер задач" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#f5f7fa">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Width="300"
                       Margin="0,20">

                <TextBlock Text="📝 РЕГИСТРАЦИЯ" 
                          FontSize="24" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"
                          Foreground="#2c3e50"/>

                <!-- Имя пользователя -->
                <TextBlock Text="Имя пользователя *" 
                          Foreground="#34495e"
                          Margin="0,10,0,5"/>
                <TextBox x:Name="UsernameTextBox"
                        Height="35"
                        FontSize="14"
                        Padding="5"
                        MaxLength="50"/>

                <!-- Email -->
                <TextBlock Text="Email *" 
                          Foreground="#34495e"
                          Margin="0,15,0,5"/>
                <TextBox x:Name="EmailTextBox"
                        Height="35"
                        FontSize="14"
                        Padding="5"/>

                <!-- Полное имя -->
                <TextBlock Text="Полное имя" 
                          Foreground="#34495e"
                          Margin="0,15,0,5"/>
                <TextBox x:Name="FullNameTextBox"
                        Height="35"
                        FontSize="14"
                        Padding="5"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль *" 
                          Foreground="#34495e"
                          Margin="0,15,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                            Height="35"
                            FontSize="14"
                            Padding="5"/>

                <!-- Подтверждение пароля -->
                <TextBlock Text="Подтверждение пароля *" 
                          Foreground="#34495e"
                          Margin="0,15,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                            Height="35"
                            FontSize="14"
                            Padding="5"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,30,0,10">
                    <Button Content="Назад"
                           Width="100"
                           Height="40"
                           Margin="0,0,10,0"
                           Click="Back_Click"/>
                    <Button x:Name="RegisterButton"
                           Content="Зарегистрироваться"
                           Background="#2ecc71"
                           Foreground="White"
                           Width="180"
                           Height="40"
                           FontWeight="Bold"
                           Click="RegisterButton_Click"/>
                </StackPanel>

                <TextBlock Text="* - обязательные поля"
                          Foreground="#7f8c8d"
                          FontSize="12"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>