<Window x:Class="TaskManagerWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер задач" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <Border DockPanel.Dock="Left" 
                Width="200" 
                Background="#2c3e50">
            <StackPanel>
                <TextBlock Text="МЕНЕДЖЕР ЗАДАЧ" 
                          Foreground="White" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Margin="10" 
                          HorizontalAlignment="Center"/>

                <Separator Background="#34495e" Height="2" Margin="5"/>

                <Button Content="📊 Панель управления" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="Dashboard_Click"/>

                <Button Content="📂 Проекты" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="Projects_Click"/>

                <Button Content="✅ Задачи" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="Tasks_Click"/>

                <Button Content="👤 Профиль" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="Profile_Click"/>

                <Separator Background="#34495e" Height="2" Margin="5,20,5,5"/>

                <Button Content="🚪 Выйти" 
                        Background="Transparent"
                        Foreground="#e74c3c"
                        BorderThickness="0"
                        Click="Logout_Click"/>
            </StackPanel>
        </Border>

        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden"
               Background="#ecf0f1"/>
    </DockPanel>
</Window>