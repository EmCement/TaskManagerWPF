<Window x:Class="TaskManagerWPF.Views.ProjectCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание проекта" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Новый проект" 
                  FontSize="20" 
                  FontWeight="Bold"
                  Grid.Row="0"
                  Margin="0,0,0,20"/>

        <!-- Исправлено: убран Spacing, добавлен Margin -->
        <StackPanel Grid.Row="1">
            <Grid Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Название проекта:" 
                          Grid.Row="0"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox"
                        Grid.Row="1"
                        Height="30"/>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Описание:" 
                          Grid.Row="0"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="DescriptionTextBox"
                        Grid.Row="1"
                        Height="60"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal"
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Отмена" 
                   Width="100"
                   Height="35"
                   Margin="0,0,10,0"
                   Click="Cancel_Click"/>
            <Button x:Name="SaveButton"
                   Content="Сохранить" 
                   Background="#2ecc71"
                   Foreground="White"
                   Width="100"
                   Height="35"
                   Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>